{
byte temp = _muxpin;
temp = temp << 2;
if (_numMuxPins > 8) PORTA = PORTA & B11000011;
else PORTA = PORTA & B11100011;
//PORTA = PORTA & B11000011;
PORTA = PORTA | temp;
